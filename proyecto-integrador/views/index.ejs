
<!-- Banner -->
<%- include('./partials/head') %>
<%- include('./partials/header') %>
<div class="banner">
  <img src="/images/Boca 1993.jpeg" alt="Banner de ofertas">
</div>
<!-- /Banner -->

<!-- Novedades -->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
      <h2 class="products-title">Novedades</h2>
    </div>

    <!-- Show the "ultimos" products -->
    
  
    <div class="col-12 col-sm-6 col-lg-3">
      <section class="product-box">
        <a href="/camisetas">
          <figure class="product-box_image">
            <img src="/images/Independiente Actual.jpeg"alt="cafetera moulinex">
          </figure>
          <article class="product-box_data">
            <h2>Nombre del producto</h2>
            <p>Descripción corta del producto Lorem ipsum dolor sit amet consectetur, adipisicing elit. Eaque
              delectus ex</p>
            <p>Comentarios: 12</p>
          </article>
        </a>
      </section>
    </div>
  </div>
</div>
<!-- /Novedades -->
<!-- Más comentados -->
<div class="container products-wrapper">
  <div class="row">
    <div class="col-12">
      <h2 class="products-title">Más comentados</h2>
    </div>
    <!-- Show the "ultimos" products -->
    <% for( let i = 0; i < productos.length; i++ ) { %>
      <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
          <a href="/camisetas">
            <figure class="product-box_image">
              <img src="<%= productos[i].imagen %>"alt="cafetera moulinex">
            </figure>
            <article class="product-box_data">
              <h2><%= productos[i].club %></h2>
              <p><%= productos[i].anio %> , <%= productos[i].sponsor %></p>
              <p>Comentarios: <%= comentarios.length %></p>
            </article>
          </a>
        </section>
      </div>
    <% } %>

  </div>
</div>
<%- include('./partials/footer') %>
